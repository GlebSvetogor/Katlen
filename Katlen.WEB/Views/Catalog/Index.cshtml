@model List<ProductViewModel>

<hr>

<main>
    <section class="catalog">
        <div class="container">
            <p class="text catalog__text">
                <a asp-controller="Home" asp-action="Index" class="catalog__link">Главная</a>
                <span> / </span>
                <a class="catalog__link fut-b" href="#">Каталог</a>
            </p>
            <h1 class="title fub-b">Каталог</h1>
            <div class="catalog__menu">
                <div class="catalog__menu-inner">
                    <div class="catalog__menu-item catalog__menu-item--quality">
                        <p class="catalog__text fut-l m-0">Количество товаров:</p>
                        <p id="general-quality" class="catalog__text fut-b m-0">120</p>
                    </div>

                    <div class="catalog__menu-item catalog__menu-item--page-quality">
                        <p class="catalog__text fut-l m-0">Товаров на странице:</p>
                        <p class="catalog__text catalog__text--page fut-b m-0">
                            <span id="page-quality">25</span>
                            <img class="dropdown-arrow" src="images/dropDown_BlackArrow-icon.svg" alt="dropDown arrow">
                        </p>
                    </div>

                    <div class="catalog__menu-item catalog__menu-item--sort">
                        <p class="catalog__text fut-l m-0">Сортировка:</p>
                        <div class="sort">
                            <select class="sort__choice fut-b" name="choice">
                                <option class="sort__option" value="first" selected>По цене</option>
                                <option class="sort__option" value="second">По размерам</option>
                                <option class="sort__option" value="third">По новизне</option>
                            </select>
                            <img class="dropdown-arrow dropdown-arrow--sort fut-b" src="images/dropDown_BlackArrow-icon.svg" alt="dropdown arrow">
                        </div>
                    </div>
                </div><!-- ./ catalog__menu-inner -->
            </div>
            <div class="catalog__inner">
                <aside class="catalog__filter">
                    <h2 class="catalog__inner-title fut-m">Фильтр</h2>
                    <ul class="catalog__list">
                        <li class="catalog__list-item">
                            <div class="catalog__list-content">
                                <h3 class="catalog__filter-title fut-m">Одежда</h3>
                                <img class="catalog__filter-arrow" src="/images/arrow-down-sign-to-navigate.svg" alt="dropDown arrow">
                            </div>
                            <form class="dropdown__list close__dropdown" action="">
                                <div class="dropdown__list-item">
                                    <input type="checkbox">
                                    <p class="text m-0 fut-l">Костюм</p>
                                </div>
                                <div class="dropdown__list-item">
                                    <input type="checkbox">
                                    <p class="text m-0 fut-l">Платье</p>
                                </div>
                                <div class="dropdown__list-item m-0">
                                    <input type="checkbox">
                                    <p class="text m-0 fut-l">Комплект</p>
                                </div>
                            </form>
                        </li>
                        <hr>
                        <li class="catalog__list-item">
                            <div class="catalog__list-content">
                                <h3 class="catalog__filter-title fut-m">Цена</h3>
                                <img class="catalog__filter-arrow" src="/images/arrow-down-sign-to-navigate.svg" alt="dropDown arrow">
                            </div>
                            <form class="dropdown__list price__dropdown" action="">
                                <input id="from" class="window__input price__dropdown-input m-0" type="text" placeholder="от 39">
                                <input id="to" class="window__input price__dropdown-input m-0" type="text" placeholder="до 249">
                            </form>
                        </li>
                        <hr>
                        <li class="catalog__list-item">
                            <div class="catalog__list-content">
                                <h3 class="catalog__filter-title fut-m">Размеры</h3>
                                <img class="catalog__filter-arrow" src="/images/arrow-down-sign-to-navigate.svg" alt="dropDown arrow">
                            </div>
                            <form class="dropdown__list size__dropdown" action="">
                                <div class="dropdown__list-item">
                                    <input type="checkbox">
                                    <p class="text m-0 fut-l">92-98</p>
                                </div>
                                <div class="dropdown__list-item">
                                    <input type="checkbox">
                                    <p class="text m-0 fut-l">102-120</p>
                                </div>
                                <div class="dropdown__list-item m-0">
                                    <input type="checkbox">
                                    <p class="text m-0 fut-l">122-134</p>
                                </div>
                            </form>
                        </li>
                        <hr>
                        <li class="catalog__list-item">
                            <div class="catalog__list-content">
                                <h3 class="catalog__filter-title fut-m">Цвет</h3>
                                <img class="catalog__filter-arrow" src="/images/arrow-down-sign-to-navigate.svg" alt="dropDown arrow">
                            </div>
                            <form class="dropdown__list color__dropdown" action="">
                                <input name="Color Picker" type="color" />
                            </form>
                        </li>
                        <hr>
                    </ul>
                </aside>

                <div class="catalog__inner-promo">

                    <div class="products catalog__products">
                        
                        @foreach (var item in @Model)
                        {

                            <div class="products__item catalog__products-item">
                                <div class="products__sale-stick fut-b">
                                    @item.SalePercent
                                </div>
                                <img class="products__item-img catalog__item-img" src="@item.ImgSource" alt="@item.Name">
                                <div class="products__item-descr">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="104" height="20" viewBox="0 0 104 20" fill="none">
                                        @for (int i = 0; i < item.Rate; i++)
                                        {
                                            <path d="M9.04894 2.92705C9.3483 2.00574 10.6517 2.00574 10.9511 2.92705L12.0206 6.21885C12.1545 6.63087 12.5385 6.90983 12.9717 6.90983H16.4329C17.4016 6.90983 17.8044 8.14945 17.0207 8.71885L14.2205 10.7533C13.87 11.0079 13.7234 11.4593 13.8572 11.8713L14.9268 15.1631C15.2261 16.0844 14.1717 16.8506 13.388 16.2812L10.5878 14.2467C10.2373 13.9921 9.7627 13.9921 9.41221 14.2467L6.61204 16.2812C5.82833 16.8506 4.77385 16.0844 5.0732 15.1631L6.14277 11.8713C6.27665 11.4593 6.12999 11.0079 5.7795 10.7533L2.97933 8.71885C2.19562 8.14945 2.59839 6.90983 3.56712 6.90983H7.02832C7.46154 6.90983 7.8455 6.63087 7.97937 6.21885L9.04894 2.92705Z" fill="#ECAD3C" />
                                        }
                                    </svg>
                                    <h3 class="products__item-title fut-m">
                                        @item.Name
                                    </h3>
                                    <ul class="products__item-list">
                                        <li class="products__item-content">
                                            <span class="products__item-tall">Рост (см)</span>
                                            <hr>
                                            <span class="products__item-value fut-m ">@item.Tall</span>
                                        </li>
                                        <li class="products__item-content products__without-line">
                                            <span class="products__item-tissue">Ткань</span>
                                            <span class="products__item-value fut-m">@item.Material</span>
                                        </li>
                                        <li class="products__item-content">
                                            <span class="products__item-price fut-b">Цена</span>
                                            <hr>
                                            <div class="products__sale">
                                                <span class="products__sale-value fut-b">@item.Price ₴</span>
                                                <span class="products__full-price fut-b">
                                                    @item.FullPrice ₴
                                                    <svg class="cross-line" xmlns="http://www.w3.org/2000/svg" width="62" height="18" viewBox="0 0 62 18" fill="none">
                                                        <path d="M61 1L1 17" stroke="#FF003D" />
                                                    </svg>
                                                </span>
                                            </div>
                                        </li>
                                    </ul>
                                    <a class="but-link catalog__but-link fut-b" href="#">Детальнее</a>
                                </div>
                            </div>
                        }
                        
                    </div><!-- /.catalog__products -->

                    <div class="catalog__pages">
                        <ul class="catalog__pages-list">
                            <li class="catalog__pages-item catalog__pages-arrow">
                                <img src="images/pageArrow-icon.svg" alt="previous page">
                            </li>
                            <li class="catalog__pages-item catalog__pages-item--active">1</li>
                            <li class="catalog__pages-item">2</li>
                            <li class="catalog__pages-item">3</li>
                            <li class="catalog__pages-item">4</li>
                            <li class="catalog__pages-item catalog__pages-arrow">
                                <img class="catalog__pages-arrow--rotate" src="images/pageArrow-icon.svg" alt="next page">
                            </li>
                        </ul>
                    </div><!-- /.catalog__pages -->

                </div><!-- /.catalog__inner-promo -->
            </div><!-- /.catalog__inner -->

        </div><!-- /.container -->
    </section>

    <section class="wholesale">
        <div class="container">
            <div class="wholesale__wrapper">
                <div class="wholesale__wrapper-inner">
                    <h2 class="title wholesale__title fut-b">Детская одежда оптом</h2>
                    <p class="text wholesale__text m-0">
                        Детская одежда оптом от производителя официальный сайт Катлен – это только качественные вещи, которые предоставляет ведущая украинская фабрика, способные отлично подойти ребенку любого возраста, не раздражая его кожу. Все изделия выполнены из натуральных тканей, что позволяет каждому чувствовать себя уютно и комфортно. Катлен, как производитель детской одежды, занимается оптовыми продажами (крупный и мелкий опт) всех разновидностей товара в любом уголке Украины: Днепр, Киев, Львов, Запорожье, Харьков, Одесса и др.
                    </p>
                </div>
            </div><!-- /. wholesale__wrapper -->
        </div><!-- /. container -->
    </section><!-- /. wholesale -->

</main>
