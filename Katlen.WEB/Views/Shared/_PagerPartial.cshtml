                            </div>
                            <div class="dropdown__list-item">
                                <input class="catalog__filtr-input" type="checkbox" name="sizes" value="L" @(Model.Filtrs != null && Model.Filtrs.ContainsKey("Размеры") && Model.Filtrs["Размеры"] != null && Model.Filtrs["Размеры"].Contains("L") ? "checked" : "")>
