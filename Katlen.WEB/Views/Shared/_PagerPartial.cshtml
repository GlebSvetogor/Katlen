                            </div>
                            <div class="dropdown__list-item">
                                <input class="catalog__filtr-input" type="checkbox" name="materials" value="Ткань" @(Model.Filtrs != null && Model.Filtrs.ContainsKey("Материалы") && Model.Filtrs["Материалы"] != null && Model.Filtrs["Материалы"].Contains("Ткань") ? "checked" : "")>
