                            </div>
                            <div class="dropdown__list-item">
                                <input class="catalog__filtr-input" type="checkbox" name="sizes" value="XL" @(Model.Filtrs != null && Model.Filtrs.ContainsKey("Размеры") && Model.Filtrs["Размеры"] != null && Model.Filtrs["Размеры"].Contains("XL") ? "checked" : "")>
                                <p class="text m-0 fut-l">XL</p>
                            </div>
                            <div class="dropdown__list-item">
                                <input class="catalog__filtr-input" type="checkbox" name="sizes" value="XXL" @(Model.Filtrs != null && Model.Filtrs.ContainsKey("Размеры") && Model.Filtrs["Размеры"] != null && Model.Filtrs["Размеры"].Contains("XXL") ? "checked" : "")>
                                <p class="text m-0 fut-l">XXL</p>
                            </div>
                        </div>
                    </li>
                    <hr>
                    <li class="catalog__list-item">
                        <div class="catalog__list-content">
                            <h3 class="catalog__filter-title fut-m">Материал</h3>
                            <img class="catalog__filter-arrow" src="/images/arrow-down-sign-to-navigate.svg" alt="dropDown arrow">
                        </div>
                        <div class="dropdown__list color__dropdown dropdown__list--active">
                            <div class="dropdown__list-item">
                                <input class="catalog__filtr-input" type="checkbox" name="materials" value="Шелк" @(Model.Filtrs != null && Model.Filtrs.ContainsKey("Материалы") && Model.Filtrs["Материалы"] != null && Model.Filtrs["Материалы"].Contains("Шелк") ? "checked" : "")>
