<div id="search-content">

    <form id="search-form" class="header__heading-form" method="get">
        <input id="search-input" class="header__heading-input" type="text" placeholder="Поиск по сайту">
        <div class="header__heading-search">
            <img class="header__heading-icon" src="~/images/search-icon.svg" alt="search icon">
        </div>
    </form>

</div>

<script>

    $(document).ready(function () {

        $("#search-form").submit(function () {
            var form = $(this);
            $.ajax({
                url: '@Url.Action("Home", "Search")',
                method: form.attr('method');
                type: 'GET',
                data: form.serialize(),
                success: function (data) {
                    $('#search-content').html(data);
                }
            });
        })

    });

</script>